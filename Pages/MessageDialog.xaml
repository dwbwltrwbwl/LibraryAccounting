<Window x:Class="LibraryAccounting.Windows.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение"
        Height="200"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#F4F1EC">

    <Border Background="#FFFDF9"
            CornerRadius="10"
            BorderBrush="#C8BFAF"
            BorderThickness="1"
            Padding="25">

        <StackPanel>

            <!-- Заголовок -->
            <TextBlock x:Name="TitleText"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#2F4F4F"
                       Margin="0,0,0,10"/>

            <!-- Сообщение -->
            <TextBlock x:Name="MessageText"
                       FontSize="14"
                       Foreground="#3A3A3A"
                       TextWrapping="Wrap"
                       Margin="0,0,0,25"/>

            <!-- Кнопка -->
            <Border CornerRadius="6"
        Background="#2F4F4F"
        HorizontalAlignment="Center">

                <Button Content="OK"
            Width="90"
            Height="34"
            Background="Transparent"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"
            Click="OkButton_Click"/>
            </Border>


        </StackPanel>
    </Border>
</Window>
