<Window x:Class="LibraryAccounting.Windows.BookCopyAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Экземпляр книги"
        Height="420"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F1EC">

    <Border Padding="20"
            Background="#FFFDF9"
            CornerRadius="10"
            BorderBrush="#C8BFAF"
            BorderThickness="1">

        <StackPanel>

            <TextBlock x:Name="TitleText"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#2F4F4F"
                       Margin="0,0,0,20"/>

            <!-- КНИГА -->
            <TextBlock Text="Книга"/>
            <ComboBox x:Name="BookBox"
                      DisplayMemberPath="Title"
                      Margin="0,5,0,15"/>

            <!-- ИНВЕНТАРНЫЙ НОМЕР -->
            <TextBlock Text="Инвентарный номер"/>
            <TextBox x:Name="InventoryBox"
                     Margin="0,5,0,15"/>

            <!-- РЯД -->
            <TextBlock Text="Ряд"/>
            <TextBox x:Name="RowBox"
                     Margin="0,5,0,15"/>

            <!-- ПОЛКА -->
            <TextBlock Text="Полка"/>
            <TextBox x:Name="ShelfBox"
                     Margin="0,5,0,25"/>

            <!-- КНОПКИ -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Отмена"
                        Width="90"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"/>

                <Button Content="Сохранить"
                        Width="110"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="Save_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
