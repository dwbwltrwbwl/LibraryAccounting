<Page x:Class="LibraryAccounting.Pages.DirectoriesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">

            <StackPanel>
                <TextBlock Text="Справочники"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"/>
                <TextBlock Text="Управление вспомогательными данными системы"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Вкладки -->
        <TabControl Grid.Row="1">

            <!-- Жанры -->
            <TabItem Header="Жанры">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Добавить жанр"
                            Width="160"
                            Margin="0,0,0,10"
                            Click="AddGenre_Click"/>

                    <DataGrid x:Name="GenresGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              Style="{StaticResource BooksDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название жанра"
                                                Binding="{Binding Name}"
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Авторы -->
            <TabItem Header="Авторы">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Добавить автора"
                            Width="160"
                            Margin="0,0,0,10"
                            Click="AddAuthor_Click"/>

                    <DataGrid x:Name="AuthorsGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              Style="{StaticResource BooksDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО"
                                                Binding="{Binding FullName}"
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>
