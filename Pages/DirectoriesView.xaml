<Page x:Class="LibraryAccounting.Pages.DirectoriesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="#F4F1EC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== ЗАГОЛОВОК ===== -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">

            <StackPanel>
                <TextBlock Text="Справочники"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"/>

                <TextBlock Text="Управление вспомогательными данными системы"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- ===== КОНТЕНТ ===== -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="10"
                Padding="15">

            <TabControl>

                <!-- ===== ЖАНРЫ ===== -->
                <TabItem Header="Жанры">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Панель действий -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">

                            <Button x:Name="AddGenre"
            Content="Добавить"
            Width="120"
            Style="{StaticResource ActionButtonStyle}"
            Click="AddGenre_Click"/>

                            <Button x:Name="DeleteGenre"
            Content="Удалить"
            Width="120"
            Margin="10,0,0,0"
            Background="#5F3E40"
            Style="{StaticResource ActionButtonStyle}"
            Click="DeleteGenre_Click"/>

                        </StackPanel>


                        <!-- Таблица -->
                        <DataGrid x:Name="GenresGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  MouseDoubleClick="GenresGrid_MouseDoubleClick"
                                  Style="{StaticResource BooksDataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
                                  RowStyle="{StaticResource BooksDataGridRowStyle}"
                                  CellStyle="{StaticResource BooksDataGridCellStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название жанра"
                                                    Binding="{Binding Name}"
                                                    Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- ===== АВТОРЫ ===== -->
                <TabItem Header="Авторы">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Панель действий -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">

                            <Button x:Name="AddAuthor"
            Content="Добавить"
            Width="120"
            Style="{StaticResource ActionButtonStyle}"
            Click="AddAuthor_Click"/>

                            <Button x:Name="DeleteAuthor"
            Content="Удалить"
            Width="120"
            Margin="10,0,0,0"
            Background="#5F3E40"
            Style="{StaticResource ActionButtonStyle}"
            Click="DeleteAuthor_Click"/>

                        </StackPanel>


                        <!-- Таблица -->
                        <DataGrid x:Name="AuthorsGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  MouseDoubleClick="AuthorsGrid_MouseDoubleClick"
                                  Style="{StaticResource BooksDataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
                                  RowStyle="{StaticResource BooksDataGridRowStyle}"
                                  CellStyle="{StaticResource BooksDataGridCellStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ФИО"
                                                    Binding="{Binding FullName}"
                                                    Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

            </TabControl>
        </Border>
    </Grid>
</Page>
