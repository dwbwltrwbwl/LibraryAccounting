<Page x:Class="LibraryAccounting.Pages.RegistrationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="800"
      Background="#F4F1EC">

    <Grid>

        <!-- Центрирование формы -->
        <Border Width="420"
                Padding="35"
                Background="#FFFDF9"
                CornerRadius="12"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Регистрация пользователя"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Создание учетной записи сотрудника"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           Margin="0,0,0,26"/>

                <!-- Фамилия -->
                <TextBlock Text="Фамилия"
           FontWeight="SemiBold"
           Foreground="#3A3A3A"/>

                <Border Margin="0,6,0,16"
        Background="#F4F1EC"
        BorderBrush="#C8BFAF"
        BorderThickness="1"
        CornerRadius="5">
                    <TextBox x:Name="LastNameTextBox"
             Height="36"
             Background="Transparent"
             BorderThickness="0"
             Padding="10"/>
                </Border>

                <!-- Имя -->
                <TextBlock Text="Имя"
           FontWeight="SemiBold"
           Foreground="#3A3A3A"/>

                <Border Margin="0,6,0,16"
        Background="#F4F1EC"
        BorderBrush="#C8BFAF"
        BorderThickness="1"
        CornerRadius="5">
                    <TextBox x:Name="FirstNameTextBox"
             Height="36"
             Background="Transparent"
             BorderThickness="0"
             Padding="10"/>
                </Border>

                <!-- Отчество -->
                <TextBlock Text="Отчество"
           FontWeight="SemiBold"
           Foreground="#3A3A3A"/>

                <Border Margin="0,6,0,24"
        Background="#F4F1EC"
        BorderBrush="#C8BFAF"
        BorderThickness="1"
        CornerRadius="5">
                    <TextBox x:Name="MiddleNameTextBox"
             Height="36"
             Background="Transparent"
             BorderThickness="0"
             Padding="10"/>
                </Border>


                <!-- Логин -->
                <TextBlock Text="Логин"
                           FontWeight="SemiBold"
                           Foreground="#3A3A3A"/>

                <Border Margin="0,6,0,16"
                        Background="#F4F1EC"
                        BorderBrush="#C8BFAF"
                        BorderThickness="1"
                        CornerRadius="5">
                    <TextBox x:Name="LoginTextBox" Height="36"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10"/>
                </Border>

                <!-- Пароль -->
                <TextBlock Text="Пароль"
                           FontWeight="SemiBold"
                           Foreground="#3A3A3A"/>

                <Border Margin="0,6,0,16"
                        Background="#F4F1EC"
                        BorderBrush="#C8BFAF"
                        BorderThickness="1"
                        CornerRadius="5">
                    <PasswordBox x:Name="PasswordBox" Height="36"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"/>
                </Border>

                <!-- Подтверждение пароля -->
                <TextBlock Text="Подтвердите пароль"
                           FontWeight="SemiBold"
                           Foreground="#3A3A3A"/>

                <Border Margin="0,6,0,24"
                        Background="#F4F1EC"
                        BorderBrush="#C8BFAF"
                        BorderThickness="1"
                        CornerRadius="5">
                    <PasswordBox x:Name="ConfirmPasswordBox" Height="36"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"/>
                </Border>

                <!-- Кнопка регистрации -->
                <Border Height="40"
        CornerRadius="8"
        Background="#2F4F4F">

                    <Button Click="RegisterButton_Click"
            Content="Зарегистрироваться"
            FontSize="14"
            FontWeight="SemiBold"
            Background="Transparent"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"/>
                </Border>

                <!-- Возврат к авторизации -->
                <Button Click="BackButton_Click" Content="Назад к авторизации"
                        Margin="0,12,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#2F4F4F"
                        FontSize="13"
                        Cursor="Hand"
                        HorizontalAlignment="Center"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
