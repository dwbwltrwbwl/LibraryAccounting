<Page x:Class="LibraryAccounting.Pages.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Background="#F4F1EC">

    <Grid>

        <!-- Основная сетка -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель -->
        <Grid Grid.Column="0"
              Background="#2F4F4F">

            <StackPanel VerticalAlignment="Center" Margin="40">

                <TextBlock Text="LIBRARY SYSTEM"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#F4F1EC"/>

                <TextBlock Text="Учет библиотечного фонда"
                           FontSize="14"
                           Foreground="#DCD7CF"
                           Margin="0,10,0,30"/>

                <TextBlock Text="— Каталог книг&#x0a;— Читатели&#x0a;— Выдача и контроль"
                           FontSize="14"
                           Foreground="#F4F1EC"
                           LineHeight="24"/>

            </StackPanel>
        </Grid>

        <!-- Правая панель -->
        <Grid Grid.Column="1"
              Background="#EDE8DF">

            <Border Width="360"
                    Padding="32"
                    Background="#FFFDF9"
                    CornerRadius="10"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    BorderBrush="#C8BFAF"
                    BorderThickness="1">

                <StackPanel>

                    <!-- Заголовок -->
                    <TextBlock Text="Вход в систему"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#3A3A3A"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Авторизация сотрудника библиотеки"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               Margin="0,0,0,24"/>

                    <!-- Логин -->
                    <TextBlock Text="Логин"
                               FontWeight="SemiBold"
                               Foreground="#3A3A3A"/>

                    <Border CornerRadius="5"
                            Background="#F4F1EC"
                            BorderBrush="#C8BFAF"
                            BorderThickness="1"
                            Margin="0,6,0,16">

                        <TextBox x:Name="LoginTextBox"
                                 Height="36"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14" MaxLength="50"/>
                    </Border>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль"
                               FontWeight="SemiBold"
                               Foreground="#3A3A3A"/>

                    <Border CornerRadius="5"
                            Background="#F4F1EC"
                            BorderBrush="#C8BFAF"
                            BorderThickness="1"
                            Margin="0,6,0,24">

                        <PasswordBox x:Name="PasswordBox"
                                     Height="36"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="10"
                                     FontSize="14" MaxLength="50"/>
                    </Border>

                    <!-- Кнопка -->
                    <Border CornerRadius="5"
        Background="#2F4F4F"
        Margin="0,0,0,0">

                        <Button Content="Войти"
            Height="40"
            FontSize="14"
            FontWeight="SemiBold"
            Background="Transparent"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"
            Click="LoginButton_Click"/>
                    </Border>

                    <!-- Переход на регистрацию -->
                    <Button Click="RegisterButton_Click" Content="Регистрация нового пользователя"
                            Margin="0,12,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#2F4F4F"
                            FontSize="13"
                            Cursor="Hand"
                            HorizontalAlignment="Center"/>

                    <!-- Ошибка -->
                    <TextBlock x:Name="ErrorTextBlock"
                               Text="Неверный логин или пароль"
                               Foreground="#8B0000"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,14,0,0"
                               Visibility="Collapsed"/>

                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Page>
