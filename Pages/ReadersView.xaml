<Page x:Class="LibraryAccounting.Pages.ReadersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Читатели"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"/>
                    <TextBlock Text="Учет зарегистрированных читателей"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="Добавить"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="AddButton_Click"/>

                    <Button Content="Редактировать"
                            Width="120"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="EditButton_Click"/>

                    <Button Content="Удалить"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="DeleteButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица читателей -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Поиск -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">

                    <TextBlock Text="Поиск:"
                               VerticalAlignment="Center"
                               Foreground="#3A3A3A"
                               Margin="0,0,10,0"/>

                    <TextBox x:Name="SearchTextBox"
                             Width="250"
                             Height="32"
                             Padding="8"
                             Background="#F4F1EC"
                             BorderBrush="#C8BFAF"
                             BorderThickness="1"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="ReadersDataGrid"
                          Grid.Row="1"
                          Style="{StaticResource BooksDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
                          RowStyle="{StaticResource BooksDataGridRowStyle}"
                          CellStyle="{StaticResource BooksDataGridCellStyle}"
                          AutoGenerateColumns="False">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ФИО"
                                            Binding="{Binding FullName}"
                                            Width="2*"/>

                        <DataGridTextColumn Header="Телефон"
                                            Binding="{Binding Phone}"
                                            Width="1.2*"/>

                        <DataGridTextColumn Header="Email"
                                            Binding="{Binding Email}"
                                            Width="1.5*"/>

                        <DataGridTextColumn Header="Паспорт"
                                            Binding="{Binding PassportData}"
                                            Width="1.2*"/>

                        <DataGridTextColumn Header="Дата регистрации"
                                            Binding="{Binding RegistrationDate, StringFormat=d}"
                                            Width="1*"/>

                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>
    </Grid>
</Page>
