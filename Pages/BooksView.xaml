<Page x:Class="LibraryAccounting.Pages.BooksView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="clr-namespace:LibraryAccounting.Converters"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">
    <Page.Resources>
        <conv:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и панель действий -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel>
                    <TextBlock Text="Каталог книг"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"/>

                    <TextBlock Text="Управление библиотечным фондом"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="Добавить" Click="AddButton_Click"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"/>

                    <Button Content="Удалить" Click="DeleteButton_Click"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица книг -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Поиск -->
                <StackPanel Orientation="Horizontal"
            Margin="0,0,0,10">

                    <TextBlock Text="Поиск:"
               VerticalAlignment="Center"
               Foreground="#3A3A3A"
               Margin="0,0,10,0"/>

                    <TextBox x:Name="SearchTextBox"
             Width="250"
             Height="32"
             Padding="8"
             Background="#F4F1EC"
             BorderBrush="#C8BFAF"
             BorderThickness="1"
             TextChanged="SearchTextBox_TextChanged"/>

                    <!-- Фильтр по жанру -->
                    <ComboBox x:Name="GenreComboBox"
              Width="180"
              Margin="20,0,0,0"
              SelectionChanged="Filter_Changed"/>

                    <!-- Сортировка -->
                    <ComboBox x:Name="SortComboBox"
              Width="180"
              Margin="10,0,0,0"
              SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBoxItem Content="Без сортировки"/>
                        <ComboBoxItem Content="По названию"/>
                        <ComboBoxItem Content="По автору"/>
                        <ComboBoxItem Content="По году"/>
                    </ComboBox>

                </StackPanel>


                <!-- DataGrid -->
                <DataGrid x:Name="BooksDataGrid"
                          Grid.Row="1"
                          RowHeight="130"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.CanContentScroll="True"
                          Style="{StaticResource BooksDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
                          RowStyle="{StaticResource BooksDataGridRowStyle}"
                          CellStyle="{StaticResource BooksDataGridCellStyle}"
                          AutoGenerateColumns="False"
                          MouseDoubleClick="BooksDataGrid_MouseDoubleClick">

                    <DataGrid.Columns>

                        <!-- Обложка -->
                        <DataGridTemplateColumn Header="Обложка" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="80"
                    Height="110"
                    CornerRadius="6"
                    BorderBrush="#C8BFAF"
                    BorderThickness="1"
                    Background="#F4F1EC"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True">

                                        <Image Source="{Binding CoverImage, Converter={StaticResource ByteArrayToImageConverter}}"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>



                        <DataGridTextColumn Header="Название"
                        Binding="{Binding Title}"
                        Width="2*"/>

                        <DataGridTextColumn Header="Автор"
                        Binding="{Binding Authors.FullName}"
                        Width="1.5*"/>

                        <DataGridTextColumn Header="Жанр"
                        Binding="{Binding Genres.Name}"
                        Width="1*"/>

                        <DataGridTextColumn Header="Издательство"
                        Binding="{Binding Publisher}"
                        Width="1*"/>

                        <DataGridTextColumn Header="Год"
                        Binding="{Binding PublishYear}"
                        Width="0.7*"/>

                        <DataGridTextColumn Header="ISBN"
                        Binding="{Binding ISBN}"
                        Width="1.2*"/>

                    </DataGrid.Columns>

                </DataGrid>

            </Grid>
        </Border>

    </Grid>
</Page>