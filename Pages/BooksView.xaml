<Page x:Class="LibraryAccounting.Pages.BooksView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и панель действий -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel>
                    <TextBlock Text="Каталог книг"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"/>

                    <TextBlock Text="Управление библиотечным фондом"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="Добавить" Click="AddButton_Click"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"/>

                    <Button Content="Редактировать" Click="EditButton_Click"
                            Width="120"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"/>

                    <Button Content="Удалить" Click="DeleteButton_Click"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"/>
                    <Button Content="Обратно" Click="BackButton_Click" Background="#5f3e40"
                            Width="100"
                            Style="{StaticResource ActionButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица книг -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Поиск -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">

                    <TextBlock Text="Поиск:"
                               VerticalAlignment="Center"
                               Foreground="#3A3A3A"
                               Margin="0,0,10,0"/>

                    <TextBox Width="250" x:Name="SearchTextBox"
                             Height="32"
                             Padding="8"
                             Background="#F4F1EC"
                             BorderBrush="#C8BFAF"
                             BorderThickness="1"/>

                    <Button Content="Найти" Click="SearchButton_Click"
                            Width="80"
                            Margin="10,0,0,0"
                            Style="{StaticResource ActionButtonStyle}"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="BooksDataGrid"
          Style="{StaticResource BooksDataGridStyle}"
          ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
          RowStyle="{StaticResource BooksDataGridRowStyle}"
          CellStyle="{StaticResource BooksDataGridCellStyle}"
          AutoGenerateColumns="False">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Название"
                            Binding="{Binding Title}"
                            Width="2*"/>

                        <DataGridTextColumn Header="Автор"
                            Binding="{Binding Author}"
                            Width="1.5*"/>

                        <DataGridTextColumn Header="Жанр"
                            Binding="{Binding Genre}"
                            Width="1*"/>

                        <DataGridTextColumn Header="Издательство"
                            Binding="{Binding Publisher}"
                            Width="1*"/>

                        <DataGridTextColumn Header="Год"
                            Binding="{Binding PublishYear}"
                            Width="0.7*"/>

                        <DataGridTextColumn Header="ISBN"
                            Binding="{Binding ISBN}"
                            Width="1.2*"/>

                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>

    </Grid>
</Page>
