<Window x:Class="LibraryAccounting.Pages.DeleteMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Подтверждение"
        Height="220"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F1EC">

    <Grid Margin="20">

        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="12"
                Padding="25">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Текст -->
                <TextBlock x:Name="MessageText"
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="#2F4F4F"
                           Margin="0,0,0,20"/>

                <!-- Кнопки -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Content="Отмена"
                            Width="110"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#6F6F6F"
                            Click="Cancel_Click"/>

                    <Button Content="ОК"
                            Width="110"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="Ok_Click"/>
                </StackPanel>
            </Grid>

        </Border>
    </Grid>
</Window>
