<Window x:Class="LibraryAccounting.Pages.BookEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryAccounting.Pages"
        mc:Ignorable="d"
        Title="BookEditWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="TitleText"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#2F4F4F"
                   Margin="0,0,0,20"/>

        <!-- Контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Поля -->
            <StackPanel Margin="0,0,20,0">

                <TextBlock Text="Название"/>
                <TextBox x:Name="TitleBox"/>

                <TextBlock Text="Автор" Margin="0,10,0,0"/>
                <ComboBox x:Name="AuthorBox"/>

                <TextBlock Text="Жанр" Margin="0,10,0,0"/>
                <ComboBox x:Name="GenreBox"/>

                <TextBlock Text="Издательство" Margin="0,10,0,0"/>
                <TextBox x:Name="PublisherBox"/>

                <TextBlock Text="Год издания" Margin="0,10,0,0"/>
                <TextBox x:Name="YearBox" 
         PreviewTextInput="YearBox_PreviewTextInput" 
         MaxLength="4"/>

                <TextBlock Text="ISBN" Margin="0,10,0,0"/>
                <TextBox x:Name="IsbnBox"/>

            </StackPanel>

            <!-- Обложка -->
            <StackPanel Grid.Column="1">

                <Border Width="160"
                        Height="220"
                        Background="#FFFDF9"
                        BorderBrush="#C8BFAF"
                        BorderThickness="1"
                        CornerRadius="6">

                    <Image x:Name="CoverImage"
                           Stretch="UniformToFill"/>
                </Border>

                <Button Content="Загрузить обложку"
                        Margin="0,10,0,0"
                        Click="LoadImage_Click"/>
                <Button Content="Удалить обложку" 
                        Click="RemoveImage_Click" 
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Сохранить"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="Save_Click"/>

            <Button Content="Отмена"
                    Width="100"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
