<Window x:Class="LibraryAccounting.Pages.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryAccounting.Pages"
        mc:Ignorable="d"
        Title="Ввод"
        Height="240"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#F4F1EC">
    <Border Background="#FFFDF9"
            CornerRadius="10"
            BorderBrush="#C8BFAF"
            BorderThickness="1"
            Padding="25">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock x:Name="TitleText"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#2F4F4F"
                       Margin="0,0,0,15"/>

            <!-- Поле ввода -->
            <TextBox x:Name="InputBox"
                     Grid.Row="1"
                     Height="34"
                     Background="#F4F1EC"
                     BorderBrush="#C8BFAF"
                     BorderThickness="1"
                     Padding="8"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Отмена"
                        Width="100"
                        Height="34"
                        Background="#6F6F6F"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"/>

                <Button Content="OK"
                        Width="90"
                        Height="34"
                        Background="#2F4F4F"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Ok_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
