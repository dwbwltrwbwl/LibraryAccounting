<Window x:Class="LibraryAccounting.Pages.ReaderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Читатель"
        Height="460"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F1EC">

    <Border Background="#FFFDF9"
            BorderBrush="#C8BFAF"
            BorderThickness="1"
            CornerRadius="10"
            Padding="25">

        <StackPanel>

            <TextBlock x:Name="TitleText"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#2F4F4F"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Фамилия"/>
            <TextBox x:Name="LastNameBox"/>

            <TextBlock Text="Имя" Margin="0,10,0,0"/>
            <TextBox x:Name="FirstNameBox"/>

            <TextBlock Text="Отчество" Margin="0,10,0,0"/>
            <TextBox x:Name="MiddleNameBox"/>

            <TextBlock Text="Телефон" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneBox"/>

            <TextBlock Text="Email" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailBox"/>

            <TextBlock Text="Паспорт" Margin="0,10,0,0"/>
            <TextBox x:Name="PassportBox"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,25,0,0">

                <Button Content="Сохранить"
                        Width="110"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="Save_Click"/>

                <Button Content="Отмена"
                        Width="100"
                        Margin="10,0,0,0"
                        Background="#6F6F6F"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
