<Page x:Class="LibraryAccounting.Pages.ReportsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Background="#FFFDF9"
        BorderBrush="#C8BFAF"
        BorderThickness="1"
        CornerRadius="8"
        Padding="20"
        Margin="0,0,0,20">

            <StackPanel>
                <TextBlock Text="Отчёты"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#2F4F4F"/>

                <TextBlock Text="Аналитика и контроль работы библиотеки"
                   FontSize="13"
                   Foreground="#6F6F6F"
                   Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Таблица отчета -->
        <Border Grid.Row="1"
        Background="#FFFDF9"
        BorderBrush="#C8BFAF"
        BorderThickness="1"
        CornerRadius="8"
        Padding="15">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Панель выбора отчета -->
                <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,12">

                    <Button Content="Выданные книги"
                    Width="150"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="IssuedBooks_Click"/>

                    <Button Content="Просрочки"
                    Width="120"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="Overdue_Click"/>

                    <Button Content="Популярные книги"
                    Width="160"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="PopularBooks_Click"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="ReportsDataGrid"
                  Grid.Row="1"
                  Style="{StaticResource BooksDataGridStyle}"
                  ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
                  RowStyle="{StaticResource BooksDataGridRowStyle}"
                  CellStyle="{StaticResource BooksDataGridCellStyle}"
                  AutoGenerateColumns="True"/>
            </Grid>
        </Border>
    </Grid>
</Page>
