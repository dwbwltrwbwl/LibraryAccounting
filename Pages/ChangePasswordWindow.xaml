<Window x:Class="LibraryAccounting.Pages.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryAccounting.Pages"
        mc:Ignorable="d"
        Title="Смена пароля"
        Height="420"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F1EC">

    <Border Padding="30"
            Background="#FFFDF9"
            CornerRadius="12"
            BorderBrush="#C8BFAF"
            BorderThickness="1">

        <StackPanel>

            <TextBlock Text="Смена пароля"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#2F4F4F"
                       Margin="0,0,0,20"/>

            <!-- Старый пароль -->
            <TextBlock Text="Текущий пароль"/>
            <PasswordBox x:Name="OldPasswordBox"
                         Height="34"
                         Margin="0,6,0,16"/>

            <!-- Новый пароль -->
            <TextBlock Text="Новый пароль"/>
            <PasswordBox x:Name="NewPasswordBox"
                         Height="34"
                         Margin="0,6,0,16"/>

            <!-- Подтверждение -->
            <TextBlock Text="Подтверждение пароля"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Height="34"
                         Margin="0,6,0,25"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Отмена"
                        Width="100"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"/>

                <Button Content="Сохранить"
                        Width="120"
                        Background="#2F4F4F"
                        Foreground="White"
                        Click="Save_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
