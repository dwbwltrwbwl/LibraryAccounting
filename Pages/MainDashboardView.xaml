<Page x:Class="LibraryAccounting.Pages.MainDashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="#F4F1EC">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Логотип -->
            <RowDefinition Height="Auto"/>
            <!-- Карточки -->
            <RowDefinition Height="*"/>
            <!-- Описание -->
        </Grid.RowDefinitions>


        <!-- Заголовок -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,25">

            <StackPanel>
                <TextBlock Text="Главная панель"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"/>

                <TextBlock Text="Информационная панель системы учета библиотеки"
                           FontSize="14"
                           Foreground="#6F6F6F"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <!-- ===== ЛОГОТИП ===== -->
        <Border Grid.Row="1"
        Background="#FFFDF9"
        BorderBrush="#C8BFAF"
        BorderThickness="1"
        CornerRadius="10"
        Padding="20"
        Margin="0,0,0,25">

            <StackPanel HorizontalAlignment="Center">

                <Image Source="pack://application:,,,/Images/logo.png"
               Width="260"
               Height="120"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock Text="LibraryAccounting"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#2F4F4F"
                   Margin="0,12,0,0"
                   HorizontalAlignment="Center"/>

                <TextBlock Text="Система учета библиотечного фонда"
                   FontSize="14"
                   Foreground="#6F6F6F"
                   Margin="0,4,0,0"
                   HorizontalAlignment="Center"/>

            </StackPanel>
        </Border>

        <!-- Карточки -->
        <Grid Grid.Row="2" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Книги -->
            <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="📚"
                               FontSize="36"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Книги"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Каталог изданий"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Читатели -->
            <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="👥"
                               FontSize="36"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Читатели"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Пользователи библиотеки"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Выдачи -->
            <Border Grid.Column="2" Style="{StaticResource DashboardCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="🔄"
                               FontSize="36"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Выдача и возврат"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Контроль операций"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Отчёты -->
            <Border Grid.Column="3" Style="{StaticResource DashboardCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="📊"
                               FontSize="36"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Отчёты"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Аналитика и контроль"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Описание -->
        <Border Grid.Row="3"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="10"
                Padding="25">

            <StackPanel>

                <TextBlock Text="Назначение системы"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Данная система предназначена для автоматизации ключевых процессов работы библиотеки и повышения эффективности учета."
                           FontSize="15"
                           Foreground="#6F6F6F"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="• Ведение и управление каталогом книг"
                                   FontSize="14"
                                   Foreground="#3A3A3A"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="• Регистрация и учет читателей библиотеки"
                                   FontSize="14"
                                   Foreground="#3A3A3A"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="• Контроль выдачи и возврата экземпляров"
                                   FontSize="14"
                                   Foreground="#3A3A3A"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="• Формирование аналитических отчетов"
                                   FontSize="14"
                                   Foreground="#3A3A3A"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Border>

    </Grid>
</Page>
