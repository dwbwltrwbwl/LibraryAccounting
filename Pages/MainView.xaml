<Page x:Class="LibraryAccounting.Pages.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">

    <Grid>

        <!-- Основная сетка -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <Border Grid.Column="0"
                Background="#2F4F4F"
                Padding="20">

            <StackPanel>

                <!-- Название системы -->
                <TextBlock Text="LIBRARY SYSTEM"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#F4F1EC"
                           Margin="0,0,0,30"/>

                <!-- Навигация -->
                <Button x:Name="BooksButton" Content="Книги"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,10" Click="BooksButton_Click"/>

                <Button x:Name="CopiesButton" Content="Экземпляры книг"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,10" Click="CopiesButton_Click"/>

                <Button x:Name="ReadersButton" Content="Читатели"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,10" Click="ReadersButton_Click"/>

                <Button x:Name="LoansButton" Content="Выдача и возврат"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,10" Click="LoansButton_Click"/>

                <Button x:Name="ReportsButton" Content="Отчеты"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,10" Click="ReportsButton_Click"/>

                <Button x:Name="DirectoriesButton" Content="Справочники"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,10" Click="DirectoriesButton_Click"/>

                <Button x:Name="UsersButton" Content="Пользователи"
                        Style="{StaticResource MenuButtonStyle}"
                        Margin="0,0,0,10" Click="UsersButton_Click"/>

                <Separator Margin="0,20,0,20"
                           Background="#A9B2A5"/>

                <Button x:Name="LogoutButton" Content="Выход"
                        Style="{StaticResource MenuButtonStyle}" Click="LogoutButton_Click"/>

            </StackPanel>
        </Border>

        <!-- Правая часть -->
        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Background="#FFFDF9"
            BorderBrush="#C8BFAF"
            BorderThickness="1"
            CornerRadius="10"
            Padding="20"
            Margin="0,0,0,25">

                <StackPanel>
                    <TextBlock Text="Главная панель"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#2F4F4F"/>

                    <TextBlock Text="Информационная панель системы учета библиотеки"
                       FontSize="14"
                       Foreground="#6F6F6F"
                       Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <!-- Карточки -->
            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Книги -->
                <Border Grid.Column="0"
                Style="{StaticResource DashboardCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/Images/books.png"
                       Width="48"
                       Height="48"
                       Margin="0,0,0,10"/>
                        <TextBlock Text="Книги"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           HorizontalAlignment="Center"/>
                        <TextBlock Text="Каталог изданий"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Читатели -->
                <Border Grid.Column="1"
                Style="{StaticResource DashboardCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/Images/readers.png"
                       Width="48"
                       Height="48"
                       Margin="0,0,0,10"/>
                        <TextBlock Text="Читатели"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           HorizontalAlignment="Center"/>
                        <TextBlock Text="Пользователи библиотеки"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Выдачи -->
                <Border Grid.Column="2"
                Style="{StaticResource DashboardCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/Images/loans.png"
                       Width="48"
                       Height="48"
                       Margin="0,0,0,10"/>
                        <TextBlock Text="Выдача и возврат"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           HorizontalAlignment="Center"/>
                        <TextBlock Text="Контроль операций"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Отчёты -->
                <Border Grid.Column="3"
                Style="{StaticResource DashboardCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/Images/reports.png"
                       Width="48"
                       Height="48"
                       Margin="0,0,0,10"/>
                        <TextBlock Text="Отчёты"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           HorizontalAlignment="Center"/>
                        <TextBlock Text="Аналитика и контроль"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Описание -->
            <Border Grid.Row="2"
        Background="#FFFDF9"
        BorderBrush="#C8BFAF"
        BorderThickness="1"
        CornerRadius="10"
        Padding="25">

                <StackPanel>

                    <!-- Заголовок -->
                    <TextBlock Text="Назначение системы"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="#2F4F4F"
                   Margin="0,0,0,10"/>

                    <!-- Описание -->
                    <TextBlock Text="Данная система предназначена для автоматизации ключевых процессов работы библиотеки и повышения эффективности учета."
                   FontSize="15"
                   Foreground="#6F6F6F"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

                    <!-- Возможности -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Левая колонка -->
                        <StackPanel Grid.Column="0">

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="Ведение и управление каталогом книг"
                               FontSize="14"
                               Foreground="#3A3A3A"
                               VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="Регистрация и учет читателей библиотеки"
                               FontSize="14"
                               Foreground="#3A3A3A"
                               VerticalAlignment="Center"/>
                            </StackPanel>

                        </StackPanel>

                        <!-- Правая колонка -->
                        <StackPanel Grid.Column="1">

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="Контроль выдачи и возврата экземпляров"
                               FontSize="14"
                               Foreground="#3A3A3A"
                               VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Формирование аналитических отчетов"
                               FontSize="14"
                               Foreground="#3A3A3A"
                               VerticalAlignment="Center"/>
                            </StackPanel>

                        </StackPanel>
                    </Grid>

                </StackPanel>
            </Border>


        </Grid>

    </Grid>
</Page>
