<Page x:Class="LibraryAccounting.Pages.AccountView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="clr-namespace:LibraryAccounting.Converters"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="#F4F1EC"
      d:DesignHeight="600"
      d:DesignWidth="1000">

    <Page.Resources>
        <conv:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Заголовок ===== -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">

            <StackPanel>
                <TextBlock Text="Аккаунт пользователя"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"/>

                <TextBlock Text="Информация о текущей учетной записи"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- ===== Контент ===== -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="12"
                Padding="30"
                Width="700"
                Height="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ===== ФОТО ===== -->
                <!-- ===== ФОТО ===== -->
                <StackPanel HorizontalAlignment="Center">

                    <Border Width="140"
            Height="190"
            CornerRadius="10"
            BorderBrush="#C8BFAF"
            BorderThickness="1"
            Background="#F4F1EC"
            Padding="6"
            SnapsToDevicePixels="True"
            UseLayoutRounding="True">

                        <Image x:Name="UserPhoto"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               RenderOptions.BitmapScalingMode="HighQuality"
               SnapsToDevicePixels="True"/>
                    </Border>

                    <!-- КНОПКИ КАК У КНИГ -->
                    <Button Content="Загрузить фото"
            Style="{StaticResource ActionButtonStyle}"
            Margin="0,15,0,0"
            Width="160"
            Click="LoadPhoto_Click"/>

                    <Button Content="Удалить фото"
            Style="{StaticResource ActionButtonStyle}"
            Background="#5F3E40"
            Margin="0,10,0,0"
            Width="160"
            Click="RemovePhoto_Click"/>

                </StackPanel>


                <!-- ===== ДАННЫЕ ===== -->
                <StackPanel Grid.Column="1" Margin="30,0,0,0">

                    <TextBlock Text="Логин" Foreground="#6F6F6F" FontSize="13"/>
                    <TextBlock x:Name="LoginText"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"
                               Margin="0,4,0,18"/>

                    <TextBlock Text="ФИО" Foreground="#6F6F6F" FontSize="13"/>
                    <TextBlock x:Name="FullNameText"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"
                               Margin="0,4,0,18"/>

                    <TextBlock Text="Роль" Foreground="#6F6F6F" FontSize="13"/>
                    <TextBlock x:Name="RoleText"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"
                               Margin="0,4,0,25"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Сменить пароль"
                                Width="160"
                                Style="{StaticResource ActionButtonStyle}"
                                Click="ChangePassword_Click"/>

                        <Button Content="Выйти из аккаунта"
                                Width="160"
                                Margin="15,0,0,0"
                                Background="#5F3E40"
                                Style="{StaticResource ActionButtonStyle}"
                                Click="Logout_Click"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
