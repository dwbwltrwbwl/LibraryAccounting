<Page x:Class="LibraryAccounting.Pages.AccountView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="#F4F1EC"
      d:DesignHeight="600"
      d:DesignWidth="1000">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">

            <StackPanel>
                <TextBlock Text="Аккаунт пользователя"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"/>

                <TextBlock Text="Информация о текущей учетной записи"
                           FontSize="13"
                           Foreground="#6F6F6F"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Контент -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="12"
                Padding="30"
                Width="520"
                HorizontalAlignment="Left">

            <StackPanel>

                <!-- Логин -->
                <TextBlock Text="Логин"
                           Foreground="#6F6F6F"
                           FontSize="13"/>

                <TextBlock x:Name="LoginText"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           Margin="0,4,0,18"/>

                <!-- ФИО -->
                <TextBlock Text="ФИО"
                           Foreground="#6F6F6F"
                           FontSize="13"/>

                <TextBlock x:Name="FullNameText"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           Margin="0,4,0,18"/>

                <!-- Роль -->
                <TextBlock Text="Роль"
                           Foreground="#6F6F6F"
                           FontSize="13"/>

                <TextBlock x:Name="RoleText"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2F4F4F"
                           Margin="0,4,0,30"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal">

                    <!-- Сменить пароль -->
                    <Border CornerRadius="6"
                            Background="#2F4F4F"
                            Margin="0,0,15,0">

                        <Button Content="Сменить пароль"
                                Width="160"
                                Height="36"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ChangePassword_Click"/>
                    </Border>

                    <!-- Выход -->
                    <Border CornerRadius="6"
                            Background="#5F3E40">

                        <Button Content="Выйти из аккаунта"
                                Width="160"
                                Height="36"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="Logout_Click"/>
                    </Border>

                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Page>
