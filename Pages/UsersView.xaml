<Page x:Class="LibraryAccounting.Pages.UsersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== ЗАГОЛОВОК И ДЕЙСТВИЯ ===== -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel>
                    <TextBlock Text="Пользователи системы"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"/>
                    <TextBlock Text="Управление учетными записями и доступом"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="Заблокировать"
                            Width="140"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#5F3E40"
                            Click="BlockButton_Click"/>

                    <Button Content="Разблокировать"
                            Width="160"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#4F6F5F"
                            Click="UnblockButton_Click"/>

                    <Button Content="Удалить"
                            Width="110"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="DeleteButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== ТАБЛИЦА ПОЛЬЗОВАТЕЛЕЙ ===== -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15">

            <DataGrid x:Name="UsersDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Style="{StaticResource BooksDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
                      RowStyle="{StaticResource BooksDataGridRowStyle}"
                      CellStyle="{StaticResource BooksDataGridCellStyle}"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Логин"
                                        Binding="{Binding Login}"
                                        Width="2*"/>

                    <DataGridTextColumn Header="Роль"
                                        Binding="{Binding Role}"
                                        Width="1.5*"/>

                    <DataGridTextColumn Header="Статус"
                                        Binding="{Binding Status}"
                                        Width="1.5*"/>

                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </Grid>
</Page>
