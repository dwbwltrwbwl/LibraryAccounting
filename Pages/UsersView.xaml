<Page x:Class="LibraryAccounting.Pages.UsersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Пользователи системы"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"/>
                    <TextBlock Text="Управление учетными записями и ролями"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="Добавить"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="AddButton_Click"/>

                    <Button Content="Редактировать"
                            Width="120"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="EditButton_Click"/>

                    <Button Content="Удалить"
                            Width="100"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="DeleteButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица пользователей -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15">

            <DataGrid x:Name="UsersDataGrid"
                      AutoGenerateColumns="False"
                      Style="{StaticResource BooksDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
                      RowStyle="{StaticResource BooksDataGridRowStyle}"
                      CellStyle="{StaticResource BooksDataGridCellStyle}">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Логин"
                                        Binding="{Binding Login}"
                                        Width="2*"/>

                    <DataGridTextColumn Header="Роль"
                                        Binding="{Binding Role}"
                                        Width="1.5*"/>

                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </Grid>
</Page>