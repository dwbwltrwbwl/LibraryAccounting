<Page x:Class="LibraryAccounting.Pages.LoansView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Background="#F4F1EC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Выдача и возврат книг"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#2F4F4F"/>
                    <TextBlock Text="Оформление выдачи и контроль возвратов"
                               FontSize="13"
                               Foreground="#6F6F6F"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="Выдать книгу"
                            Width="130"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="IssueButton_Click"/>

                    <Button Content="Вернуть книгу"
                            Width="130"
                            Margin="0,0,10,0"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="ReturnButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица выдач -->
        <Border Grid.Row="1"
                Background="#FFFDF9"
                BorderBrush="#C8BFAF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15">

            <DataGrid x:Name="LoansDataGrid"
                      Style="{StaticResource BooksDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource BooksDataGridColumnHeaderStyle}"
                      RowStyle="{StaticResource BooksDataGridRowStyle}"
                      CellStyle="{StaticResource BooksDataGridCellStyle}"
                      AutoGenerateColumns="False">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Читатель"
                                        Binding="{Binding Reader}"
                                        Width="2*"/>

                    <DataGridTextColumn Header="Книга"
                                        Binding="{Binding Book}"
                                        Width="2*"/>

                    <DataGridTextColumn Header="Инв. №"
                                        Binding="{Binding InventoryNumber}"
                                        Width="1*"/>

                    <DataGridTextColumn Header="Дата выдачи"
                                        Binding="{Binding LoanDate, StringFormat=d}"
                                        Width="1*"/>

                    <DataGridTextColumn Header="Срок возврата"
                                        Binding="{Binding DueDate, StringFormat=d}"
                                        Width="1*"/>

                    <DataGridTextColumn Header="Дата возврата"
                                        Binding="{Binding ReturnDate, StringFormat=d}"
                                        Width="1*"/>

                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
